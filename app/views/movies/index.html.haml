%h2 All movies

= form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, (@checks==nil)? true:@checks.find_index(rating) 
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if flash[:notice].eql?('title'))}= link_to "Movie Title", movies_path(:sort => "title", :filter => @checks), :id => "title_header"
      %th Rating
      %th{:class => ("hilite" if flash[:notice].eql?('release_date'))}= link_to "Release Date", movies_path(:sort => "release_date", :filter => @checks),:id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
        
= link_to 'Add a new movie', new_movie_path

